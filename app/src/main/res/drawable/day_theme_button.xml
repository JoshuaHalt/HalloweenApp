<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/button_day_disabled" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <item android:state_focused="false" android:state_pressed="false" android:state_selected="true">
        <shape>
            <solid android:color="@color/button_day" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <item android:state_focused="false" android:state_pressed="false" android:state_selected="false">
        <shape>
            <solid android:color="@color/button_day" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/button_day_pressed" />
            <corners android:radius="16dp" />
        </shape>
    </item>
</selector>